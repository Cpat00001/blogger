{# basic/contact.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-12 subpage_title">
        <h2>{{ title }}</h2>    
    </div>
</div>
<div class="row mt-4 border" id="c1">
    <div class="col-6">
        <h5>Name:</h5>
        <h2>{{ name }}</h2>    
    </div>
    <div class="col-6">
        <h5>phone:</h5>
        <h2>{{ phone }}</h2>    
    </div>
</div>
<div class="row mt-4 border mail">
    <div class="col-4">
        <h5>email:</h5>
    </div>
    <div class="col-8">
        <h2>{{ email }}</h2>
    </div>
</div>
<div class="row gmap">
    <div class="col col-lg-6 col-sm-12">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d39720.676507715!2d-0.23323547784686538!3d51.521612884964824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon!5e0!3m2!1sen!2suk!4v1631716524499!5m2!1sen!2suk" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>    
    </div>
    <div class="col col-lg-6 col-sm-12 contactform">
        <h5>Dodaj forme kontaktowa</h5>
    </div>
</div>


{% endblock %}