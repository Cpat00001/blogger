{# basic/contact.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-12">
        <h2>{{ title }}</h2>    
    </div>
</div>
<div class="row mt-4 border">
    <div class="col-6">
        <h2>Name:</h2>
        <h2>{{ name }}</h2>    
    </div>
    <div class="col-6">
        <h2>phone:</h2>
        <h5>{{ phone }}</h5>    
    </div>
</div>
<div class="row mt-4 border">
    <div class="col-4">
        <h2>email:</h2>
    </div>
    <div class="col-8">
        <h2>{{ email }}</h2>
    </div>
</div>

{% endblock %}